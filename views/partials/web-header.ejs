  <body class="pt-0 md:pt-24">
    <div class="fixed z-50 w-full top-0">
      <div class="bg-[#7A9576] h-[40px] hidden sm:block">
        <div class="container mx-auto flex py-[10px] justify-between">
          <div class="flex items-center">
            <img
              src="/img/phone_in_talk.png"
              alt="phone_in_talk"
              class="w-[18px] h-[18px] my-auto"
              width="18px"
              height="18px"
            />
            <span class="mx-2 text-white text-[16px] font-medium">
              <%= setting.phone %>
            </span>
            <img
              src="/img/attach_email.png"
              alt="phone_in_talk"
              class="w-[18px] h-[18px] my-auto ml-4"
              width="18px"
              height="18px"
            />
            <span class="mx-2 text-white text-[16px] font-medium">
              <%= setting.email %>
            </span>
          </div>
          <div class="flex items-center">
            <img
              src="/img/youtube.png"
              alt="phone_in_talk"
              class="w-[22px] h-[22px] my-auto mr-2"
              width="22px"
              height="22px"
            />
            <img
              src="/img/facebook.png"
              alt="phone_in_talk"
              class="w-[22px] h-[22px] my-auto mr-2"
              width="22px"
              height="22px"
            />
            <img
              src="/img/insta.png"
              alt="phone_in_talk"
              class="w-[22px] h-[22px] my-auto mr-2"
              width="22px"
              height="22px"
            />
            <img
              src="/img/zalo.png"
              alt="phone_in_talk"
              class="w-[22px] h-[22px] my-auto mr-2"
              width="22px"
              height="22px"
            />
          </div>
        </div>
      </div>
      <div
        class="lg:bg-[#F3F6F3] bg-[#7A9576] h-[66px] border-white border-b-2"
      >
        <div class="container mx-auto flex py-[8px] justify-between">
          <div class="bg-[#7A9576] h-[50px] w-[126px] p-3">
            <img src="<%= setting.logo %>" alt="logo" class="w-full h-full" />
          </div>
          <div class="items-center hidden lg:flex">
            <ul class="flex items-center mx-5">
              <li class="mx-2 text-xl active"><a href="/">Trang chủ</a></li>
              <li class="mx-2 text-xl"><a href="/gioi-thieu">Giới thiệu</a></li>
              <li class="mx-2 text-xl"><a href="/san-pham">Sản phẩm</a></li>
              <li class="mx-2 text-xl"><a href="/bai-viet">Blog</a></li>
              <li class="mx-2 text-xl"><a href="/chinh-sach">Chính sách</a></li>
              <li class="mx-2 text-xl"><a href="/lien-he">Liên hệ</a></li>
            </ul>
            <div class="mx-2 relative hidden xl:block">
              <img
                src="/img/search.png"
                alt=""
                class="absolute top-1 right-1 w-6 h-6"
              />
              <input
                type="text"
                placeholder="Nhập để tìm kiếm"
                class="py-1 px-2 border border-[#415C3F] bg-[#F3F6F3] rounded-lg text-sm"
              />
            </div>
            <div class="flex items-center">
              <img
                src="/img/heart.png"
                alt="phone_in_talk"
                class="w-[30px] h-[30px] my-auto mr-2"
              />
              <a href="/gio-hang" class="relative">
                <div
                  id="countCart"
                  class="absolute inline-flex items-center justify-center w-5 h-5 text-xs font-bold text-white bg-red-500 rounded-full -top-1 -end-1 dark:border-gray-900"
                ></div>
                <img
                  src="/img/cart.png"
                  alt="phone_in_talk"
                  class="w-[30px] h-[30px] my-auto mr-2"
                />
              </a>
              <img
                src="/img/user.png"
                alt="phone_in_talk"
                class="w-[30px] h-[30px] my-auto mr-2"
              />
            </div>
          </div>
          <div class="flex lg:hidden items-center px-5">
            <button id="menu-btn">
              <svg
                class="w-8 h-8 text-white"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                fill="none"
                viewBox="0 0 24 24"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-width="2"
                  d="M5 7h14M5 12h14M5 17h14"
                />
              </svg>
            </button>
          </div>
        </div>
