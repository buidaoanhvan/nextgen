    </textarea>
      </div>
      <div class="grid grid-cols-2">
        <!-- toping -->
        <div class="mb-6">
          <div class="flex items-center">
            <!-- Input for keywords -->
            <label class="block text-sm font-medium text-gray-900 dark:text-white" for="product_tag">Toping:</label>
