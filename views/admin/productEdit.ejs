                  d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                  clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
          <div class="mt-3">
            <ul
              class="w-48 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
              <% product.product_toppings.forEach(element=> { %>
                <li class="w-full px-4 py-2 border-b border-gray-200 dark:border-gray-600">
                  <%=element.name%>: <%=element.additional_price%>đ
                </li>
                <% }) %>
            </ul>
          </div>
        </div>
        <!-- size -->
        <div class="mb-6">
          <div class="flex items-center">
            <!-- Input for keywords -->
            <label class="block text-sm font-medium text-gray-900 dark:text-white" for="product_tag">Size:</label>
            <!-- Modal toggle -->
            <button data-modal-target="size-modal" data-modal-toggle="size-modal"
